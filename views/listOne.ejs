<% include partials/header %>

<body>
    <% include partials/sidebar %>
    <div class="content pure-u-1 pure-u-md-3-4">
        <div>
            <!-- A wrapper for all the blog posts -->
            <div class="posts">
                <h1 class="content-subhead">Details of <%= results.name %></h1>
                <section class="post">
                    <header class="post-header">
                        <h2 class="post-title">Photo from Pokemon.com</h2>
                    </header>

                    <div class="post-description">
                        <div class="post-images pure-g">

                            <div class="pure-u-1 center">
                                <a href="/pokemon/v2/1">
                                    <img alt="Photo of <%= results.name %>" class="pure-img-responsive"
                                        src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/<%= results.cod %>.png"
                                        width="30%" height="30%">
                                </a>

                                <div class="post-image-meta">
                                    <h3><%= results.name %></h3>
                                </div>
                                <div>
                                    <% Object.keys(results.sprites).map( item => { %>
                                    <img class="pure-img-responsive" src="<%= results.sprites[item] %>" width="10%"
                                        height="10%">
                                    <% }) %>
                                </div>
                            </div>

                            <div class="pure-u-1">
                                <h3>ABILITIES</h3>
                                <ul class="layout-item-modules pure-g">
                                    <% results.abilities.map( item => { %>
                                    <li class="layout-item-module layout-item-module-base pure-u">
                                        <a href="<%= item.ability.url %>"><%= item.ability.name %></a>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>

                            <div class="pure-u-1">
                                <h3>MOVES</h3>
                                <ul class="layout-item-modules pure-g">
                                    <% results.moves.map( item => { %>
                                    <li class="layout-item-module layout-item-module-grids pure-u">
                                        <a href="<%= item.move.url %>"><%= item.move.name %></a>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>

                            <div class="pure-u-1">
                                <h3>STATS</h3>
                                <ul class="layout-item-modules pure-g">
                                    <% results.stats.map( item => { %>
                                    <li class="layout-item-module layout-item-module-buttons pure-u">
                                        <a href="<%= item.stat.url %>"><%= item.stat.name %></a>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>

                            <div class="pure-u-1">
                                <h3>TYPES</h3>
                                <ul class="layout-item-modules pure-g">
                                    <% results.types.map( item => { %>
                                    <li class="layout-item-module layout-item-module-tables pure-u">
                                        <a href="<%= item.type.url %>"><%= item.type.name %></a>
                                    </li>
                                    <% }) %>
                                </ul>
                            </div>

                        </div>
                    </div>
                </section>
                <div class="pure-button-group" role="group">
                    <% if(prevPage !== 0) { %>
                    <a href="/pokemon/v2/<%= prevPage %>" class="pure-button">Previous Pokemon</a>
                    <% } %>
                    <a href="/pokemon/v2/<%= nextPage %>" class="pure-button">Next Pokemon</a>
                </div>
            </div>

            <% include partials/footer %>